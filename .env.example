# Application Environment
ENVIRONMENT=development
DEBUG=false

# Database (TimescaleDB)
DATABASE__URL=postgresql+asyncpg://reliability:reliability_password@localhost:5432/reliability_platform
DATABASE__POOL_SIZE=20
DATABASE__MAX_OVERFLOW=10
DATABASE__ECHO=false

# Kafka
KAFKA__BOOTSTRAP_SERVERS=localhost:9092
KAFKA__CLIENT_ID=reliability-platform
KAFKA__COMPRESSION_TYPE=gzip

# Redis
REDIS__URL=redis://localhost:6379/0
REDIS__MAX_CONNECTIONS=50

# API
API__HOST=0.0.0.0
API__PORT=8000
API__CORS_ORIGINS=["*"]
API__RATE_LIMIT_PER_MINUTE=1000

# Invariants
INVARIANTS__ENABLED=true
INVARIANTS__MAX_PARALLEL=10
INVARIANTS__DEFAULT_TIMEOUT_MS=5000

# Drift Detection
DRIFT_DETECTION__ENABLED=true
DRIFT_DETECTION__DETECTION_INTERVAL_MINUTES=15
DRIFT_DETECTION__BASELINE_WINDOW_HOURS=24
DRIFT_DETECTION__COMPARISON_WINDOW_HOURS=1
DRIFT_DETECTION__MIN_SAMPLES_REQUIRED=100
DRIFT_DETECTION__KL_DIVERGENCE_THRESHOLD=0.1
DRIFT_DETECTION__JS_DIVERGENCE_THRESHOLD=0.1
DRIFT_DETECTION__COSINE_DISTANCE_THRESHOLD=0.15
DRIFT_DETECTION__RESPONSE_LENGTH_CHANGE_THRESHOLD=0.3
DRIFT_DETECTION__LATENCY_CHANGE_THRESHOLD=0.5
DRIFT_DETECTION__COST_CHANGE_THRESHOLD=0.3

# Observability
OBSERVABILITY__LOG_LEVEL=INFO
OBSERVABILITY__STRUCTURED_LOGGING=true
OBSERVABILITY__ENABLE_TRACING=false
OBSERVABILITY__TRACING_ENDPOINT=
OBSERVABILITY__METRICS_PORT=9090
